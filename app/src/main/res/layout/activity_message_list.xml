<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Messages.MessagesFromOneSenderActivity">

    <EditText
        android:id="@+id/etNewChatMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/chat_new_message_hint"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/btnAdNewChatMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendNewChatMessage"
        android:text="@string/add_new_chat_message_btn_text" />

    <ListView
        android:id="@+id/lvMessagesList"
        android:layout_width="395dp"
        android:layout_height="wrap_content">


    </ListView>



    <!--<WebView
        android:id="@+id/wvBrowser"
        android:layout_width="wrap_content"
        android:layout_height="500dp" />-->
</LinearLayout>